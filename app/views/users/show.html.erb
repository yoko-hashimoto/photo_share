<div class="container"> 
   <h1><%= @user.name %></h1>
  <div class="user">
    <p class="photo"><%= image_tag @user.icon.url %></p>
    <div class="user_information">
      <p class="email">メールアドレス: <%= @user.email %></p>

      <p>
        <span><%= link_to favorites_path do %></span>
          <i class="fas fa-heart fa-lg heart"></i>
          <span>My Favroites</span>
        <% end %>
      </p>
      <p>
          <% if @user.id == current_user.id %>
            <span><%= link_to edit_user_path(current_user.id) do %></span>
              <i class="fas fa-user fa-lg"></i>
              <span>Edit Profile</span>
            <% end%>
          <% end %>
      </p>
    </div>
  </div>
</div>