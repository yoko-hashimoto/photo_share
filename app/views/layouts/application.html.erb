<!DOCTYPE html>
<html>
  <head>
    <title>PhotoShare</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
              <%# <span class="sr-only">Bootstrap</span> %>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/photos/">Photo Share</a>
          </div>
          <div id="gnavi" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
              <li><a href="/photos">Photo list</a></li>

              <% if logged_in? %>
                <li><a href="/photos/new">Create new</a></li>
                <%# ログインしている場合 %>
                <li><%= link_to "Profile", user_path(current_user.id) %></li>
                <li><%= link_to "Logout", session_path(current_user.id), method: :delete %></li>
              <% else %>
                <%# ログインしていない場合 %>
                <li><%= link_to "Sign up", new_user_path %></li>
                <li><%= link_to "Log in", new_session_path %></li>
              <% end %>

            </ul>
          </div>
        </div>
      </nav>
    </header>









    
    
      <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "#{key}") %>
      <% end %>

    <%= yield %>
  </body>
</html>
